<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fu.springbootdynamicdatasource.mapper.mysql2.MySQL2UserMapper">

    <resultMap type="com.fu.springbootdynamicdatasource.entity.User" id="BaseResultMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="baseColumn">
        id,`name`
    </sql>

    <insert id="insert" parameterType="com.fu.springbootdynamicdatasource.entity.User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                `name`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
        </trim>
    </insert>

    <select id="selectById" resultType="com.fu.springbootdynamicdatasource.entity.User">
        select <include refid="baseColumn"/> from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>

</mapper>
